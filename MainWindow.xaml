                <ImageBrush/>
            </TextBox.BorderBrush>
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="TextBoxPressure" HorizontalAlignment="Left" Margin="535,163,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="213" RenderTransformOrigin="0.721,-1.131" FontSize="20" Foreground="White">
