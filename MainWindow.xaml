        </TextBox>
        <TextBox x:Name="TextBoxHumidity" HorizontalAlignment="Left" Margin="535,228,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="213" RenderTransformOrigin="0.721,-1.131" FontSize="20" Foreground="White">
